{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Selected Test",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-tests",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/tests/Odoo.Tests/Odoo.Tests.csproj",
                "--filter",
                "FullyQualifiedName~${selectedText}",
                "--no-build"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "enableStepFiltering": false,
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": "Run All Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-tests",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/tests/Odoo.Tests/Odoo.Tests.csproj",
                "--no-build"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "enableStepFiltering": false,
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": "Attach to TestHost",
            "type": "coreclr",
            "request": "attach",
            "processName": "testhost",
            "justMyCode": false
        },
        {
            "name": "Odoo.Demo (Interactive Menu)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/samples/Odoo.Demo/bin/Debug/net10.0/Odoo.Demo.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "enableStepFiltering": false,
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": "Demo: Basic ORM (1)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/samples/Odoo.Demo/bin/Debug/net10.0/Odoo.Demo.dll",
            "args": ["1"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "enableStepFiltering": false,
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": "Demo: Modularity & Pipeline (5)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/samples/Odoo.Demo/bin/Debug/net10.0/Odoo.Demo.dll",
            "args": ["5"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "enableStepFiltering": false,
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "enableStepFiltering": false
        },
        {
            "name": "Python: Attach to Embedded Script",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/Scripts",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": false
        }
    ],
    "compounds": [
        {
            "name": "Debug Selected Test (Compound)",
            "configurations": ["Attach to TestHost"],
            "preLaunchTask": "debug-test-selected",
            "stopAll": true
        }
    ]
}